  <!-- Open Graph metadata -->
  <meta property="og:title" content="<img src=x onerror=alert('XSS via og:title')>">
  <meta property="og:description" content="<script>alert('XSS via og:description')</script>">
  <meta property="og:url" content="https://yourdomain.github.io/">
  <meta property="og:image" content="https://example.com/image.jpg">

  <!-- Twitter Cards -->
  <meta name="twitter:title" content="<svg onload=alert('XSS via twitter:title')>">
  <meta name="twitter:description" content="<script>alert('XSS via twitter:description')</script>">

  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
